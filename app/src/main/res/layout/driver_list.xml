<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <ImageView
        android:id="@+id/driver_image"
        android:layout_width="135dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/pll" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="140dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_driverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_driver_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver Id:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


        <TextView
            android:id="@+id/text_view_license_No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License No:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_view_Experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experience :"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />




    </LinearLayout>

</RelativeLayout>